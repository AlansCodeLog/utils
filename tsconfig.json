// https://www.typescriptlang.org/tsconfig/
{
	// ./node_modules/@alanscodelog/tsconfigs/tsconfig.json
	// https://github.com/AlansCodeLog/tsconfigs
	"extends": "@alanscodelog/tsconfigs",
	"compilerOptions": {
		"outDir": "dist",
		"types": [
			"node"
		],
		"lib": [
			"dom",
			"esnext"
		], // dom needed for browser utils
		"allowJs": true, // for eslint to be able to typecheck js files
	},
	"include": [
		"src/**/*.ts",
		"tests/**/*.ts",
		"tests/**/*.js",
		"*.ts",
		"*.js"
	],
	"exclude": []
}
